<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kaushal.lightmeter.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/initial_value"
        android:id="@+id/lux"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="120sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/initial_value"
        android:id="@+id/maxLux"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="3dp"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/initial_value"
        android:id="@+id/minLux"
        android:layout_below="@+id/maxLux"
        android:layout_alignLeft="@+id/maxLux"
        android:layout_alignStart="@+id/maxLux"
        android:layout_marginTop="62dp"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/max_lux"
        android:id="@+id/textView"
        android:layout_above="@+id/minLux"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/min_lux"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/minLux"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/light_meter_unit"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/lux"
        android:layout_toRightOf="@+id/lux"
        android:layout_toEndOf="@+id/lux"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textStyle="italic"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/light_meter_unit"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/maxLux"
        android:layout_toRightOf="@+id/maxLux"
        android:layout_toEndOf="@+id/maxLux"
        android:textStyle="italic"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/light_meter_unit"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/minLux"
        android:layout_toRightOf="@+id/minLux"
        android:layout_toEndOf="@+id/minLux"
        android:textStyle="italic"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>

</RelativeLayout>
